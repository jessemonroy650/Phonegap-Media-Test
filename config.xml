<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.bsdmasterindex.phonegapmedia-test"
        version     = "1.3.0"
        versionCode = "130" >
        <!-- versionCode is optional and Android only -->

        <!-- Tool Set Version --> 
        <preference name='phonegap-version' value='cli-6.0.0' />
        <platform name="android" />

        <name>Phonegap Media test</name>
        <description>Simple media test. Playback of audio file. ogg=Android, wav=iOS</description>
        <author href="http://bsdmasterindex.com" email="jessemonroy650@yahoo.com">
        Jesse Monroy
        </author>

        <preference name="permissions" value="none"/>
        <!-- device required so we can detect if we are using iOS -->
        <plugin name="cordova-plugin-device" spec="~2.0.2" />
        <plugin name="cordova-plugin-file" spec="~6.0.1" />
        <plugin name="cordova-plugin-media" spec="~4.0.0" />
    </widget>
