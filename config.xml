<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.bsdmasterindex.phonegapmedia-test"
        version     = "1.3.0"
        versionCode = "130" >
        <!-- versionCode is optional and Android only -->

        <!-- Tool Set Version --> 
        <preference name='phonegap-version' value='cli-6.0.0' />

        <name>Phonegap Media test</name>
        <description>Simple media test. Playback of audio file. ogg=Android, wav=iOS</description>
        <author href="http://bsdmasterindex.com" email="jessemonroy650@yahoo.com">
        Jesse Monroy
        </author>
        <platform name="android" />
        <platform name="ios" />

        <preference name="permissions" value="none"/>
        <!-- device required so we can detect if we are using iOS -->
        <!-- <gap:plugin name="org.apache.cordova.device" version="0.2.12" /> -->
        <!-- <gap:plugin name="org.apache.cordova.media" version="0.2.13" /> -->
        <plugin name="cordova-plugin-device" spec="~2.0.2" />
        <plugin name="cordova-plugin-media" spec="~5.0.2" />
    </widget>
